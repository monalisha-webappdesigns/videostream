body{ font-family: 'Roboto', sans-serif; color:#000000}
/*******universal class**********/
.font-md{ font-size:40px; font-weight:500; text-transform:uppercase}
.font-sm{ font-size:20px; font-weight:300;}
.font-xm{ font-size:18px; font-weight:300;}
.font-xs{ font-size:16px; font-weight:300;}


/*******universal class**********/

.navbar{ margin-bottom:0px}
.navbar .navbar-brand{ height:auto}
.navbar .nav{ padding:27px 0}
.navbar .nav li{ margin:0 5px}
.navbar .nav li a{ font-size:16px; text-transform:uppercase; font-weight:300; line-height:1; padding:7px 20px; border-radius:50px;}
.navbar-default .navbar-nav>li>a { color: #000;}
.navbar-default .navbar-nav>.active>a, .navbar-default .navbar-nav>.active>a:focus, .navbar-default .navbar-nav>.active>a:hover {color: #fff; background-color: #5c5c5c;}
.navbar-default .navbar-nav>li>a:focus, .navbar-default .navbar-nav>li>a:hover{ background-color: #5c5c5c; color:#fff;}
.navbar-fixed-top{ border-width: 0 0 8px;}
.navbar-default{ border-color: #5c5c5c; background:#fff}


/******slider******/
.slider .flexslider{ margin:0; border:0}
.slider{ margin-top:90px}
.flexslider .slides li{ position:relative}
.slider-content{ position: absolute; top:50px; left: 0; z-index: 99; width: 100%; color:#fff;}
.flexslider .slides li .slider-content h5{ margin-top:15px}
.banner-btn{ padding:40px 0; text-align:center}
.banner-btn .common-b {
    padding: 8px 15px;
    background: #fff;
    border-radius: 5px;
    font-size: 18px;
    font-weight: 500;
    color: #000;
	}
.banner-btn .common-b.banner-btn-left{ margin:0 15px}
.banner-btn .common-b.banner-btn-right{ margin:0 15px}

/********section target********/
.target{ padding:40px 0}
.target .font-md{ text-align:center; margin:10px 0 20px;}
.target .font-sm{ text-align:center; margin:10px 0 20px;}
.target .terget-img{ max-width:100%; height:auto; padding:40px 0}

/************people************/
.people{ background:#f2f2f2; padding:60px 0 75px}
.people .font-md{ margin:20px 0}
.people .font-xm{ max-width:500px}

.people .client .slides .client-img{ max-width:200px; border-radius:100%; height:auto; display: block; margin: 0 auto;}
.flex-direction-nav .flex-prev {left: 30px;}
.flex-direction-nav .flex-next {right: 30px; text-align: right;}
.flex-direction-nav .flex-prev:before{ background:url(../images/client-left.png) center center no-repeat; height:32px; width:32px}
.flex-direction-nav .flex-next:before{ background:url(../images/client-right.png) center center no-repeat; height:32px; width:32px}
.flex-direction-nav a{ opacity:1}
.people .client-name{ font-size:24px; font-weight:300; text-align:center; margin:15px 0 0}
.people .font-xm.client-post{ text-align:center; max-width:100%}
.people .font-xs{ text-align:center; max-width:450px; margin:0 auto}


/************networks***************/
.networks{ background:#000}
.networks .font-md{ padding:67px 0 77px; color:#fff; text-align:center; margin:0}

/*********project1*********/
.project1{ padding:97px 0 89px; background:#f2f2f2}
.project1 h2,.project2 h2{ font-size:30px; font-weight:500; text-transform:uppercase; margin-bottom:15px} 
.project1 p,.project2 p{ font-size:20px; font-weight:300;}
.project-img{ width:500px; max-width:100%}

/***********project2**************/

.project2{ padding:97px 0 89px; background:#fff}

/************footer***********/
footer .top-footer{ padding:60px 0 30px; background:#ebebeb}
footer .font-xm{ font-weight:500; color:#000; text-transform:uppercase}
footer .top-footer .border-box{ border-right:1px solid #bcbcbc; min-height:300px}
footer h5{ font-size:14px; font-weight:500; line-height:19px}
footer h3{ margin:0 0 50px}
footer .address-title{ font-size:18px}
footer .p-link ul,footer .l-news ul{ padding:0; list-style:none} 
footer .p-link ul li,footer .l-news ul li{ text-transform:uppercase; font-size:14px; font-weight:500; padding-bottom:10px;}
footer .p-link ul li a,footer .l-news ul li a{ color:#3f3f3f}
footer .p-link ul li:last-child,footer .l-news ul li:last-child{ padding-bottom:0}
.social-icon ul { padding: 0; list-style: none;}
.social-icon span img{ max-width:35px; margin-right:10px}
.social-icon ul li{ font-size:14px; font-weight:500; padding-bottom:5px;}
.social-icon ul li a{ color:#3f3f3f}


footer .bottom-footer{ padding:20px 0; background:#000}
footer .bottom-footer p{ font-size:14px; font-weight:500; color:#fff; margin:0}
footer .bottom-footer .left{ text-align:left}
footer .bottom-footer .right{ text-align:right}


/*********************************************** inner pages ***********************************************/
.inner-banner{ margin-top:90px; position:relative}
.inner-banner img{ width:100%}
.inner-banner h2,.inner-banner h5{ color:#1b1b1b}
.inner-banner h5{ padding-top:10px}
.inner-banner .slider-content{ top:50%; margin-top:-58px}
.inr-people{ background:#fff; padding:60px 0 90px}
.target{ background:url(../images/target.jpg) fixed no-repeat; background-size:cover; padding:88px 0 58px}
.target h2,.target h5{ color:#fff}

/*********************************************** login pages ***********************************************/
	